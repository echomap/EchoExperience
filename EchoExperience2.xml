<GuiXml>
	<Controls>
		<TopLevelControl name="EOL_GUI" clampedToScreen="true" mouseEnabled="true" movable="true" moveable="true" hidden="true" resizeHandleSize="10">
			<DimensionConstraints minX="410" minY="300" maxY="1400"/>
			<Anchor point="TOPRIGHT" relativeTo="GUI_ROOT" relativePoint="TOPRIGHT" offsetX="-250" offsetY="400" />
      <OnMoveStop>EchoExperience:SaveFramePosition("onMoveStop")</OnMoveStop>
			<OnResizeStart> EchoExperience:onResizeStart() </OnResizeStart>
			<OnResizeStop>EchoExperience:onResizeStop()</OnResizeStop>

			<Controls>
				<Backdrop name="$(parent)_BG" inherits="ZO_DefaultBackdrop" > <AnchorFill/> </Backdrop>

				<Control name="$(parent)_Header" hidden="false" resizeToFitDescendents="false" >
					<Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetY="10" offsetX="10"/>
					<Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="-10" offsetY="10" />

					<Controls>
<!-- Lock/Unlock buttons -->
<!-- end of Lock/Unlock buttons -->
<!-- Dock/Undock buttons -->
<!-- end of Dock/Undock buttons -->

						<Label name="$(parent)_Label" mouseEnabled="false" font="ZoFontBookPaper" text="-EchoExp Tracking-" >
							<Anchor point="TOP" relativeTo="$(parent)" relativePoint="TOP" offsetX="0" offsetY="0"/>
						</Label>

<!-- hide buttons _Minimize _Maximize _GoldButton _BagButton-->

						<Control name="$(parent)_Dropdown_Main" inherits="ZO_ScrollableComboBox" mouseEnabled="true" tier="HIGH">
							<Dimensions y="30" minX="100"/>
              <Anchor point="TOP" relativeTo="$(parent)_Label" relativePoint="BOTTOM" offsetX="0" offsetY="0"/>
<!-- 	
							<OnMouseEnter>EchoExperience:GuiShowTooltip(self, "Select inventory to view")</OnMouseEnter>
							<OnMouseExit>EchoExperience:GuiHideTooltip(self)</OnMouseExit>
 -->
						</Control>
            
            <Button name="$(parent)_BtnClose" verticalAlignment="CENTER" horizontalAlignment="CENTER" mouseEnabled="true">
              <Anchor point="TOPLEFT" relativeTo="$(parent)_Dropdown_Main" relativePoint="TOPRIGHT" offsetX="20" offsetY="0" />
              <Dimensions x="40" y="40" />
              <Textures normal="EsoUI/art/buttons/decline_up.dds"
                    pressed="EsoUI/art/buttons/decline_down.dds"
                    mouseOver="EsoUI/art/buttons/decline_over.dds"
              />
